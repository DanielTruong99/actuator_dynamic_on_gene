{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "colcon",
			"args": [
				"build",
				"--symlink-install",
				"--event-handlers",
				"console_cohesion+",
				"--base-paths",
				"/home/danieltruong/DanielWorkspace/ros2_ws",
				"--cmake-args",
				"-DCMAKE_BUILD_TYPE=Debug",
				// "--packages-select",
				// "test_xenomai",
				"--packages-ignore",
				"test_xenomai", "non_rt_node", "motor_driver",
			],
			"problemMatcher": [
				"$catkin-gcc"
			],
			"group": "build",
			"label": "colcon: build"
		},
		{
			"type": "shell",
			"label": "Run Post-Build Script",
			"command": "source src/motor_driver/post_build.bash",
		},
		{
			"label": "Build and Run Script",
			"dependsOn": [
				"colcon: build",
				"Run Post-Build Script"
			],
			"group": "build",
			"dependsOrder": "sequence"
    	}
	]
}